<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F7BC05"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.mk.otogalerim.IlanResimler">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="İlan Resimlerini Seçin"
        android:textColor="#203040"
        android:textSize="20dp"
        android:textStyle="bold" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/resimSecButn"
        android:background="@drawable/mune_buton_back"
        android:text="Resim Seç"/>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:id="@+id/secilenIlanResmiImageView"
        android:layout_height="100dp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/resimEkleButon"
        android:background="@drawable/mune_buton_back"
        android:text="Resmi Ekle"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/ilanYayınlaButon"
        android:background="@drawable/mune_buton_back"
        android:text="Çık"/>



</LinearLayout>
