<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3897D9"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mk.otogalerim.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:id="@+id/mainActivitySlider"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/mainActivitySliderFavori"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            ></android.support.v4.view.ViewPager>

        <me.relex.circleindicator.CircleIndicator
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"

            android:id="@+id/mainActivitysliderCircle"
            app:ci_drawable="@color/colorAccent"
            app:ci_drawable_unselected="@color/mavi"
            android:layout_height="40dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_below="@+id/mainActivitySlider"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/mune_buton_back"
                android:layout_margin="5dp"
                android:padding="8dp"
                android:textColor="#0F3057"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/ılanlarButon"
                android:paddingBottom="10dp"
                android:drawableTop="@drawable/ilanlist"
                android:text="İlanlar" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="#0F3057"
                android:textStyle="bold"
                android:padding="8dp"
                android:id="@+id/ilanVerButon"
                android:paddingBottom="10dp"
                android:background="@drawable/mune_buton_back"
                android:drawableTop="@drawable/ilanver"
                android:text="Ilan Ver" />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="#0F3057"
                android:textStyle="bold"
                android:padding="8dp"
                android:paddingBottom="10dp"
                android:background="@drawable/mune_buton_back"
                android:drawableTop="@drawable/favori"
                android:text="Favori İlanlar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:layout_margin="5dp"
                android:textColor="#0F3057"
                android:textStyle="bold"
                android:background="@drawable/mune_buton_back"
                android:paddingBottom="10dp"
                android:id="@+id/iletisimBilgileri"
                android:drawableTop="@drawable/iletisim"
                android:text="İletişim Bilgileri" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:layout_margin="5dp"
                android:textColor="#0F3057"
                android:padding="8dp"
                android:id="@+id/kisimesajlari"
                android:textStyle="bold"
                android:background="@drawable/mune_buton_back"
                android:drawableTop="@drawable/mesaj"
                android:text="Mesajlarım" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:layout_margin="5dp"
                android:textColor="#0F3057"
                android:padding="8dp"
                android:id="@+id/ilanlarimMenuButon"
                android:textStyle="bold"
                android:background="@drawable/mune_buton_back"
                android:drawableTop="@drawable/ilanlarim"
                android:text="İlanlarım" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
